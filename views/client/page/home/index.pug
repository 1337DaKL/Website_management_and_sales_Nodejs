                        label(for="email") Email
                        input.form-control(type="email", id="email", name="email", placeholder="Nhập email của bạn")
                    .form-group
                        label(for="message") Tin nhắn
                        textarea.form-control(id="message", name="message", rows="5", placeholder="Nhập tin nhắn")
