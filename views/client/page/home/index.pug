    // Phần liên hệ
    .container.mt-5#contact
        h2.text-center Liên Hệ Chúng Tôi
        .row.justify-content-center
            .col-md-8
                form(action="/contact", method="post")
                    .form-group
                        label(for="name") Họ Tên
                        input.form-control(type="text", id="name", name="name", placeholder="Nhập tên của bạn")
